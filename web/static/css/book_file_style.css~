    text-align: center;
}

/* Название книги */
h1 {
    font-size: 2.5rem;
    font-weight: bold;
    margin-bottom: 10px;
    color: #222;
}

/* Название главы */
h2 {
    font-size: 1.8rem;
    font-weight: bold;
    margin-bottom: 20px;
    color: #555;
}

/* Рамка для текста книги */
div {
    max-width: 1200px;
    padding: 20px;
