}

/* Абзацы с красной строкой */
p {
    line-height: 1.6;
    margin: 0 0 1em 0;
    padding: 0;
    text-align: justify;
    text-indent: 2em; /* Красная строка */
}

.at-magnifier-wrapper {
    display: none; /* Полностью скрывает элемент */
    visibility: hidden; /* Дублирует скрытие */
    width: 0; /* Убирает ширину */
    height: 0; /* Убирает высоту */
    position: absolute; /* Убирает влияние на макет */
    overflow: hidden; /* На случай, если внутри есть контент */
}
.at-theme-light {
    display: none;
    visibility: hidden;
    width: 0;
    height: 0;
    position: absolute;
    overflow: hidden;
}


